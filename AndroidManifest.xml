<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.genshin.warehouse"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET">
        
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".WarehouseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings.WarehouseSettingsActivity"
            android:label="@string/settings" >
            
        </activity>
        <activity
            android:name=".settings.AboutWarehouseActivity"
            android:label="@string/settings" >
            
        </activity>
        <activity
            android:name=".settings.UpdateActivity"
            android:label="@string/update" >
            
        </activity>
        <activity
            android:name=".profiles.ProfileSettingsActivity"
            android:label="@string/profiles" >
            
        </activity>
        <activity 
            android:name=".products.ProductsMenuActivity"
            android:label="@string/products" 
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden"
            >
            
        </activity>
        <activity 
            android:name=".products.ProductDetailsActivity"
            android:label="@string/product_details" >
            
        </activity>
        <activity 
            android:name=".products.ProductEditActivity"
            android:label="@string/product_edit" >
            
        </activity>
        <activity 
            android:name=".orders.OrdersMenuActivity"
            android:label="@string/orders" >
            
        </activity>
        <activity 
            android:name=".orders.OrderDetailsActivity"
            android:label="@string/order_details" >
            
        </activity>
        <activity 
            android:name=".stocking.StockingMenuActivity"
            android:label="@string/stocking" >
            
        </activity>
        <activity 
            android:name=".picking.PickingMenuActivity"
            android:label="@string/picking" >
            
        </activity>
        <activity 
            android:name=".packing.PackingMenuActivity"
            android:label="@string/packing" >
            
        </activity>
        <activity 
            android:name=".shipping.ShippingMenuActivity"
            android:label="@string/shipping" >
            
        </activity>
    </application>
</manifest>
