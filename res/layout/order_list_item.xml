<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp" >
            
            <TextView 
                android:id="@+id/orders_list_item_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			<TextView 
                android:id="@+id/orders_list_item_number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
				android:autoLink="all"
				android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >
			
            <TextView 
                android:id="@+id/orders_list_item_state"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			<TextView 
                android:id="@+id/orders_list_item_payment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />	
            <TextView 
                android:id="@+id/orders_list_item_shipment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
				android:autoLink="all"
				android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
        
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp" >
            
			<TextView 
                android:id="@+id/orders_list_item_email"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			<TextView 
                android:id="@+id/orders_list_item_total"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			<TextView 
                android:id="@+id/orders_list_item_edit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
	            android:textColor="@color/white"
	            android:background="@color/gray" />
			
	</LinearLayout>

</LinearLayout>